# Database (Neon Postgres)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Planning Center API
PLANNING_CENTER_CLIENT_ID=
PLANNING_CENTER_SECRET_KEY=

# Resend Email
RESEND_API_KEY=

# Email Recipients (Global)
PLAN_VISIT_NOTIFY_EMAILS=
SMALL_GROUP_NOTIFY_EMAILS=
WANT_TO_SERVE_NOTIFY_EMAILS=

# Serve Team-Specific Notification Emails (Optional, comma-separated)
# When someone selects a team, these emails are notified in addition to global recipients
# Example: SERVE_NOTIFY_KIDS=kids.lead@example.com,assistant@example.com
SERVE_NOTIFY_GUEST_SERVICES=
SERVE_NOTIFY_WORSHIP=
SERVE_NOTIFY_KIDS=
SERVE_NOTIFY_STUDENTS=
SERVE_NOTIFY_TECH=
SERVE_NOTIFY_CREATIVE=

# Better Auth (Admin Dashboard)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=https://admin.vertical.family
# Optional: Additional trusted origins (comma-separated)
# BETTER_AUTH_TRUSTED_ORIGINS=https://staging.example.com,https://admin.staging.example.com
# Optional: Cookie domain for cross-subdomain auth (leave empty to disable)
# BETTER_AUTH_COOKIE_DOMAIN=.example.com

# S3 Storage (for image uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=auto
AWS_ENDPOINT_URL_S3=
BUCKET_NAME=
# Public URL for accessing uploaded files (e.g., https://bucket-name.t3.storage.dev)
S3_PUBLIC_URL=
